<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tobiadeyinka.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tobiadeyinka.popularmovies.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tobiadeyinka.popularmovies.activities.MovieDetailsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MOVIEDETAILSACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name=".utilities.MoviesProvider"
            android:enabled="true"
            android:multiprocess="true"
            android:authorities="com.tobiadeyinka.popularmovies.utilities">
        </provider>

    </application>

</manifest>
